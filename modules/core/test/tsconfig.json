{
    "extends": "../tsconfig.json",
    "include": [
        "../src/**/*.ts",
        "../test/**/*.ts"
    ],
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "allowJs": true,
        "importHelpers": false,
        "noEmitHelpers": false,
        "noEmitOnError": false,
        "sourceMap": false,
        "inlineSources": false,
        "inlineSourceMap": false,
        "downlevelIteration": false,
        "baseUrl": "../",
        "paths": {
            "@rapidsai/core": ["src/index"],
            "@rapidsai/core/*": ["src/*"]
        }
    }
}
