{
  "name": "@nvidia/rapids-core",
  "version": "0.0.1",
  "description": "Shared CMake modules, TypeScript configurations, and C++ headers for RAPIDS node native modules",
  "main": "index.js",
  "types": "build/js",
  "license": "Apache-2.0",
  "author": "NVIDIA, Inc. (https://nvidia.com/)",
  "maintainers": [
    "Paul Taylor <paul.e.taylor@me.com>"
  ],
  "bin": {
    "nvidia-cmake-js": "bin/exec_cmake.js",
    "nvidia-cmake-install-deps": "bin/exec_install_deps.js"
  },
  "scripts": {
    "postinstall": "cmake-js install",
    "clean": "npx rimraf build compile_commands.json",
    "build": "npm run tsc:build && npm run cpp:build",
    "compile": "npm run tsc:build && npm run cpp:compile",
    "rebuild": "npm run tsc:build && npm run cpp:rebuild",
    "cpp:build": "nvidia-cmake-js -g build",
    "cpp:build:debug": "nvidia-cmake-js -g build -D",
    "cpp:compile": "nvidia-cmake-js -g compile",
    "cpp:compile:debug": "nvidia-cmake-js -g compile -D",
    "cpp:rebuild": "nvidia-cmake-js -g rebuild",
    "cpp:rebuild:debug": "nvidia-cmake-js -g rebuild -D",
    "tsc:build": "npx rimraf build/js && tsc -p ./tsconfig.json",
    "tsc:watch": "npx rimraf build/js && tsc -p ./tsconfig.json -w"
  },
  "dependencies": {
    "@types/node": "^14.0.0",
    "cmake-js": "6.0.0",
    "node-addon-api": "^3.0.0",
    "tslib": "^1.12.0"
  },
  "devDependencies": {
    "@types/jest": "25.2.2",
    "jest": "25.5.1",
    "jest-silent-reporter": "0.1.2",
    "rimraf": "3.0.0",
    "segfault-handler": "1.3.0",
    "ts-jest": "25.5.1",
    "ts-node": "8.10.1",
    "typescript": "4.1.3"
  },
  "files": [
    "bin",
    "src",
    "build",
    "cmake",
    "include",
    "LICENSE",
    "index.js",
    "package.json"
  ]
}
