{
  "name": "@rapidsai/core",
  "version": "0.0.1",
  "description": "Shared CMake modules, TypeScript configurations, and C++ headers for RAPIDS node native modules",
  "main": "index.js",
  "types": "build/js",
  "license": "Apache-2.0",
  "author": "NVIDIA, Inc. (https://nvidia.com/)",
  "maintainers": [
    "Paul Taylor <paul.e.taylor@me.com>"
  ],
  "bin": {
    "nvidia-cmake-js": "bin/exec_cmake.js",
    "nvidia-cmake-copy-libs": "bin/exec_copy_libs.js",
    "nvidia-cmake-install-deps": "bin/exec_install_deps.js"
  },
  "scripts": {
    "postinstall": "nvidia-cmake-js install",
    "clean": "rimraf build compile_commands.json",
    "build": "yarn tsc:build && yarn cpp:build",
    "build:debug": "yarn tsc:build && yarn cpp:build:debug",
    "compile": "yarn tsc:build && yarn cpp:compile",
    "compile:debug": "yarn tsc:build && yarn cpp:compile:debug",
    "rebuild": "yarn tsc:build && yarn cpp:rebuild",
    "rebuild:debug": "yarn tsc:build && yarn cpp:rebuild:debug",
    "cpp:build": "nvidia-cmake-js -g build",
    "cpp:build:debug": "nvidia-cmake-js -g build -D",
    "cpp:compile": "nvidia-cmake-js -g compile",
    "cpp:compile:debug": "nvidia-cmake-js -g compile -D",
    "cpp:configure": "nvidia-cmake-js -g configure",
    "cpp:configure:debug": "nvidia-cmake-js -g configure -D",
    "cpp:rebuild": "nvidia-cmake-js -g rebuild",
    "cpp:rebuild:debug": "nvidia-cmake-js -g rebuild -D",
    "cpp:reconfigure": "nvidia-cmake-js -g reconfigure",
    "cpp:reconfigure:debug": "nvidia-cmake-js -g reconfigure -D",
    "tsc:build": "rimraf build/js && tsc -p ./tsconfig.json",
    "tsc:watch": "rimraf build/js && tsc -p ./tsconfig.json -w"
  },
  "dependencies": {
    "@types/node": "^15.0.0",
    "esm": "3.2.25",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.23",
    "cmake-js": "6.0.0",
    "dotenv": "8.2.0",
    "jest": "26.5.3",
    "node-addon-api": "3.2.1",
    "rimraf": "3.0.0",
    "shx": "0.3.3",
    "ts-jest": "26.5.3",
    "ts-node": "10.0.0",
    "typedoc": "0.21.4",
    "typescript": "4.3.4"
  },
  "files": [
    "LICENSE",
    "bin",
    "build/js",
    "cmake",
    "include/nv_node",
    "index.js",
    "package.json"
  ]
}
