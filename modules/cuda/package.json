{
  "name": "@rapidsai/cuda",
  "version": "22.8.2",
  "description": "NVIDIA CUDA driver and runtime API bindings",
  "main": "index.js",
  "types": "build/js",
  "license": "Apache-2.0",
  "author": "NVIDIA, Inc. (https://nvidia.com/)",
  "maintainers": [
    "Paul Taylor <paul.e.taylor@me.com>"
  ],
  "homepage": "https://github.com/rapidsai/node/tree/main/modules/core#readme",
  "bugs": {
    "url": "https://github.com/rapidsai/node/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rapidsai/node.git"
  },
  "scripts": {
    "install": "npx --package=@rapidsai/core -- rapidsai-install-native-module",
    "clean": "rimraf build doc compile_commands.json",
    "doc": "rimraf doc && typedoc --options typedoc.js",
    "test": "node -r dotenv/config node_modules/.bin/jest -c jest.config.js",
    "build": "yarn tsc:build && yarn cpp:build",
    "build:debug": "yarn tsc:build && yarn cpp:build:debug",
    "compile": "yarn tsc:build && yarn cpp:compile",
    "compile:debug": "yarn tsc:build && yarn cpp:compile:debug",
    "rebuild": "yarn tsc:build && yarn cpp:rebuild",
    "rebuild:debug": "yarn tsc:build && yarn cpp:rebuild:debug",
    "cpp:clean": "npx --package=@rapidsai/core -- nvidia-cmake-js clean",
    "cpp:clean:debug": "npx --package=@rapidsai/core -- nvidia-cmake-js clean -D",
    "cpp:build": "npx --package=@rapidsai/core -- nvidia-cmake-js build -g",
    "cpp:build:debug": "npx --package=@rapidsai/core -- nvidia-cmake-js build -g -D",
    "cpp:compile": "npx --package=@rapidsai/core -- nvidia-cmake-js compile -g",
    "cpp:compile:debug": "npx --package=@rapidsai/core -- nvidia-cmake-js compile -g -D",
    "cpp:configure": "npx --package=@rapidsai/core -- nvidia-cmake-js configure -g",
    "cpp:configure:debug": "npx --package=@rapidsai/core -- nvidia-cmake-js configure -g -D",
    "cpp:rebuild": "npx --package=@rapidsai/core -- nvidia-cmake-js rebuild -g",
    "cpp:rebuild:debug": "npx --package=@rapidsai/core -- nvidia-cmake-js rebuild -g -D",
    "cpp:reconfigure": "yarn cpp:clean && npx --package=@rapidsai/core -- nvidia-cmake-js configure -g",
    "cpp:reconfigure:debug": "yarn cpp:clean:debug && npx --package=@rapidsai/core -- nvidia-cmake-js configure -g -D",
    "tsc:clean": "rimraf build/js",
    "tsc:build": "yarn tsc:clean && tsc -p ./tsconfig.json",
    "tsc:watch": "yarn tsc:clean && tsc -p ./tsconfig.json -w",
    "dev:cpack:enabled": "echo $npm_package_name"
  },
  "dependencies": {
    "@rapidsai/core": "~22.8.2"
  },
  "files": [
    "LICENSE",
    "README.md",
    "index.js",
    "package.json",
    "CMakeLists.txt",
    "src/node_cuda",
    "build/js"
  ]
}
